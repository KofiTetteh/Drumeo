{% set page = 'admin' %}
{% set pages = 'product.view' %}
{% set product = 'product' %}
{% extends 'templates/app.twig' %}

{% block content %}
      <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Update Part
        <small> </small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{path_for('admin.dashboard')}}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="{{path_for('product.view')}}"><i class="fa fa-circle-o"></i> Spare part</a></li>
        <li class="active">Update Part</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content"> 
      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Update Part</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="row"> 
              {{ parent() }}
               <div class="col-md-2">
                  
                </div>
                <div class="col-md-8">
                    <form role="form" action="{{path_for('product.update.post',{slug:products.slug})}}" method="post" enctype="multipart/form-data">
              <div class="box-body">
                <div class="form-group">
                  <label for="name">Part name</label>
                  <input type="text" class="form-control" id="name" name="name" value="{{products.title}}">
                </div>
                 <div class="form-group">
                  <label for="slug">Slug</label>
                  <input type="text" class="form-control" id="slug" name="slug" value="{{products.slug}}">
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input type="number" class="form-control" id="price" name="price" value="{{products.price}}">
                </div>
                <div class="form-group">
                  <label for="stock">Quantity</label>
                  <input type="number" class="form-control" id="stock" name="stock" value="{{products.stock}}">
                </div>
                <div class="form-group">
                  <label for="description">Description</label>
                  <textarea class="form-control" rows="3" placeholder="Description" name="description">{{products.description}}</textarea>
                </div> 
              </div>  
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              {{ csrf.field | raw }}
            </form>
                </div>
                <!-- /.col -->
                <div class="col-md-2">
                  
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->
            </div>
            <!-- ./box-body -->
            <div class="box-footer">
              <div class="row">
               
                
              </div>
              <!-- /.row -->
            </div>
            <!-- /.box-footer -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}