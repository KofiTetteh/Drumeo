{% set page = 'admin' %}
{% set pages = 'product.view' %}
{% set product = 'product' %}
{% extends 'templates/app.twig' %}

{% block content %}
      <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Spare Parts
        <small> </small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Parts</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content"> 
      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Parts</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="row">
               <div class="col-md-12">
                  <table class="table" id="productss">
                      <thead>
                          <tr>
                              <th>Image</th>
                              <th>Part name</th>
                              <th>Slug</th>
                              <th>Description</th>
                              <th>Price($)</th>
                              <th>Stock</th>
                              <th>Action</th>
                          </tr>
                      </thead>
                      <tbody>
                      {% for product in products %}
                          <tr>
                              <td><center><img src="{{base_url()}}/upload/{{product.image}}" alt="product image" width="30" height="30" class="img-circle" /></center></td>
                              <td>{{ product.title }}</td>
                              <td>{{ product.slug }}</td>
                              <td>{{ product.description }}</td>
                              <td>{{ product.price }}</td>
                              <td>{{ product.stock }}</td>
                              <td> 
                              <a href="{{ path_for('product.update',{slug:product.slug})}}">
                                <i class="fa fa-edit"></i> <span> </span>
                              </a>
                              </td>
                          </tr>
                      {% endfor %}
                          
                      </tbody>
                         <tfoot>
                          <tr>
                              <th>Image</th>
                              <th>Part name</th>
                              <th>Slug</th>
                              <th>Description</th>
                              <th>Price($)</th>
                              <th>Stock</th>
                              <th>Action</th>
                          </tr>
                      </tfoot>
                  </table>
                </div>
                 
                <!-- /.col -->
              </div>
              <!-- /.row -->
            </div>
            <!-- ./box-body -->
            <div class="box-footer">
              <div class="row">
               
                
              </div>
              <!-- /.row -->
            </div>
            <!-- /.box-footer -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
{% block scripts %}
<script src="{{base_url()}}/js/jquery.dataTables.min.js"></script> 
<script src="{{base_url()}}/js/dataTables.bootstrap.min.js"></script> 
   <script type="text/javascript">
    $(document).ready(function(){
     
    });
     $(function () {
    $("#productss").DataTable();
    
  });
   </script> 
{% endblock %}